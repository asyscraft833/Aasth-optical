<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            tools:context=".Acivtiy.LoginActivity">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_bg"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:text="Welcome Back !"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Enter your mobile"
                    app:boxStrokeColor="@color/greycolor"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:prefixText="+91"
                    android:textColorHint="@color/hintcolor"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:id="@+id/etmobile"
                        android:maxLength="10"
                        android:inputType="number"
                        android:drawableStart="@drawable/call_24px"
                        android:textColor="@color/textcolor"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="16sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Enter your password"
                    app:endIconMode="password_toggle"
                    app:boxStrokeColor="@color/greycolor"
                    android:textColorHint="@color/hintcolor"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:id="@+id/etpassword"
                        android:inputType="textPassword"
                        android:textColor="@color/textcolor"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableStart="@drawable/password_24px"
                        android:textSize="16sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Enter your mpin"
                    app:boxStrokeColor="@color/greycolor"
                    android:textColorHint="@color/hintcolor"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:id="@+id/etmpin"
                        android:inputType="textPassword"
                        android:textColor="@color/textcolor"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="16sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:id="@+id/forgetpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password ?"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="end"
                    android:textColor="@color/textcolor"/>

            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/_140sdp"
                android:textColor="@color/white"
                android:text="Login"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                app:cornerRadius="@dimen/_5sdp"
                android:id="@+id/loginbtn"
                android:textSize="@dimen/_15sdp"
                android:backgroundTint="@color/primarycolor"
                android:layout_gravity="center"/>



            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have an account? Register"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                />



        </LinearLayout>
    </ScrollView>

</layout>